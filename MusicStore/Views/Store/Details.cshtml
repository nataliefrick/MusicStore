@model MusicStore.Models.Album

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Album</h4>
    <hr />
    <div class="row flex-row">
        <div class="width-auto">
            <img style="width:200px;height:200px" src="@Html.DisplayFor(model =>model.AlbumArtUrl)" />
        </div>
        <div class="width-auto pt-5">
            <div>
                <span class="fw-bold fs-3">
                    @Html.DisplayFor(model => model.Title)
                </span>
            </div><div>
            @Html.DisplayNameFor(model => model.Artist): @Html.DisplayFor(model => model.Artist.Name)
            </div>
            <div>
            @Html.DisplayNameFor(model => model.Price): @Html.DisplayFor(model => model.Price)
            </div><div>
                @Html.DisplayNameFor(model => model.Genre): @Html.DisplayFor(model => model.Genre.Name)
            </div>
        </div>
    </div>
</div>
